<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/senoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seno:" />

    <TextView
        android:id="@+id/cosenoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Coseno:" />

    <TextView
        android:id="@+id/areaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Área (Cuadrado):" />

    <TextView
        android:id="@+id/perimetroTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Perímetro (Cuadrado):" />

    <Button
        android:id="@+id/btnVolverMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#0234C8"
        android:textColor="@color/cardview_light_background"
        android:text="Volver a calcular" />

</LinearLayout>